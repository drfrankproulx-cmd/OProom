# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017/or_scheduler

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email Configuration (for calendar invites via email)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your.email@example.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=your.email@example.com
CALENDAR_SYNC_ENABLED=false

# Google Calendar OAuth Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
GOOGLE_REDIRECT_URI=https://oproom.preview.emergent.com/settings
FRONTEND_URL=https://oproom.preview.emergent.com

# Auto-Archive Configuration
AUTO_ARCHIVE_DELAY_HOURS=48
